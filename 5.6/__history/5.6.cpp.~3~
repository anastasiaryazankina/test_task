void explode_line(string s, string arr[]){
  char *ins = new char[s.size() + 1];
  strcpy(ins, s.c_str());
  char *word = strtok(ins, " ");
  string w(word);
  arr[0] = w;
  int i=1;
  while (word = strtok(NULL, " ")){
	std::string w(word);
	arr[i++] = w;
  }
  return ;
}



