}
Procedure SortPupilsList(var list:TPupilsList; n:integer);
Var rec:TPupil; i,j ,k1,k2:integer;
Begin
  for i:=2 to n do
    for j:=i-1 downto 1 do
      if list[j+1].bKl&ltlist[j].bKl then
      begin
        rec:=list[j]; list[j]:=list[j+1]; list[j+1]:=rec;
      end;
End;

